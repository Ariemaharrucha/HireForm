generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(cuid())       // internal ID
  clerkId   String   @unique                   // mapping ke Clerk
  email     String   @unique
  forms     Form[]
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Form {
  id          String      @id @default(cuid())
  user        User        @relation(fields: [userId], references: [id])
  userId      String
  title       String
  description String?
  criteria    String
  slug        String      @unique
  candidates  Candidate[]
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model Candidate {
  id         String   @id @default(cuid())
  name       String
  email      String
  resumeUrl  String
  resumeText String?
  aiSummary  String?
  aiScore    Int?
  status     String   @default("processing")
  formId     String
  form       Form     @relation(fields: [formId], references: [id])
  createdAt  DateTime @default(now())
}

